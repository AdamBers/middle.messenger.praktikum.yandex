{
  "rootDir": "src",
  "compilerOptions": {
    "target": "ES2020",
    "noEmit": true,
    "useDefineForClassFields": true,
    "module": "es2022",
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "static",
    "types",
    "eslint.config.js",
    "stylelint.config.js"
  ],
  "exclude": ["node_modules"]
}
